extends layout

block content
  h1= title
  br

  form(method='POST' action='')
    div.form-group
      label(for='highSchoolName') Name:
      input#highSchoolName.form-control(type='text', placeholder='Name of high school' name='highSchoolName' required='true' value=(undefined===highSchool ? '' : highSchool.highSchoolName) )
    div.form-group
      label(for='address') Address:
      input#address.form-control(type='text', placeholder='Address of high school' name='address' required='false' value=(undefined===highSchool ? '' : highSchool.address) )
    button.btn.btn-primary(type='submit') Submit

  if errors
    ul
      for error in errors
        li!= error.msg

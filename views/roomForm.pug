extends layout

block content
  h1= title
  br

  form(method='POST' action='')
    div.form-group
      label(for='roomNumber') Room Number:
      input#roomNumber.form-control(type='text', placeholder='Room Number' name='roomNumber' required='true' value=(undefined===room ? '' : room.roomNumber) )
    div.form-group
      label(for='building') Building:
      input#building.form-control(type='text', placeholder='Building' name='building' required='true' value=(undefined===room ? '' : room.building) )
    div.form-group
      label(for='capacity') Room Capacity:
      input#capacity.form-control(type='text', placeholder='Capacity' name='capacity' required='false' value=(undefined===room ? '' : room.capacity) )
    
    button.btn.btn-primary(type='submit') Submit

  if errors
    ul
      for error in errors
        li!= error.msg

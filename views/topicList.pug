extends layout

block content
  .row
    .col-lg-6
      h1= title
      h5 Click to view more information about a topic, edit or delete it.
    .col-lg-6.right
      a.btn.btn-lg.btn-success(href='/twist/topic/create', role='button') Create new topic


  br
  .row
    .col-lg-12
      ul
        each topic in topicList
          li.horz
            a(href=topic.url) #{topic.title}

        else
          li There are no topics.
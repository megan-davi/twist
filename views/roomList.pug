extends layout

block content
  .row
    .col-lg-6
      h1= title
      h5 Click to view more information about a room, edit or delete it.
    .col-lg-6.right
      a.btn.btn-lg.btn-success(href='/twist/room/create', role='button') Create new room
  br
  .row
    .col-lg-12
      ul
        each room in roomList
          li.horz
            a(href=room.url) #{room.roomNumber}

        else
          li There are no rooms.
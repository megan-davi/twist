extends layout

block content
  .row
    .col-lg-6
      h1 #{topic.title}
      br
      h5 #[strong Name:] #{topic.title}
      h5 #[strong Description:] #{topic.description}
      h5 #[strong Presenter:] #{topic.presenter}
      br

      button.btn.btn-primary(onclick='goBack()') Go Back
      script.
        function goBack() {
        window.history.back();
        }
    .col-lg-6.right
      br
      a.btn.btn-lg.btn-success(href='/twist/topic/edit', role='button') Edit this Topic 
      br
      br
      a.btn.btn-lg.btn-success(href='/twist/topic/delete', role='button') Delete this Topic

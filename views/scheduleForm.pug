extends layout

block content
  h1= title
  br

  form(method='POST' action='')
    div.form-group
      label(for='session') Session:
      select#session.form-control(type='select', placeholder='Select session' name='session' required='true' )
        for session in sessions
          if time
            option(value=session._id selected=(session._id.toString()==session.time ? 'selected' : false) ) #{session.time}
          else
            option(value=session._id) #{session.time}
    button.btn.btn-primary(type='submit') Submit

  if errors
    ul
      for error in errors
        li!= error.msg

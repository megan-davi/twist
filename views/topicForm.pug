extends layout

block content
  h1= title
  br

  form(method='POST' action='')
    div.form-group
      label(for='title') Name:
      input#title.form-control(type='text', placeholder='Name of topic' name='title' required='true' value=(undefined===topic ? '' : topic.title) )
    div.form-group
      label(for='description') Description:
      input#description.form-control(type='text', placeholder='Description of topic' name='description' required='false' value=(undefined===topic ? '' : topic.description) )
    div.form-group
      label(for='presenter') Presenter:
      input#presenter.form-control(type='text', placeholder='Presenter of topic' name='presenter' required='false' value=(undefined===topic ? '' : topic.presenter) )
    
    button.btn.btn-primary(type='submit') Submit

  if errors
    ul
      for error in errors
        li!= error.msg
